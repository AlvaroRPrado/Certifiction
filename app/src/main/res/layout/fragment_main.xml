<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/codelab_title_aad"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:text="Google Developer Certification"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codelab_title_core"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="Codelab: Core"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/codelab_toast_snake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:gravity="left|center_vertical"
            android:text="Toast &amp; Snake"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded" />
        <Button
            android:id="@+id/codelab_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:gravity="left|center_vertical"
            android:text="Notification"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/codelab_work_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:gravity="left|center_vertical"
            android:text="Work Manager"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/codelab_material_components"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:gravity="left|center_vertical"
            android:text="Material Components (Kotlin)"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/codelab_interactive_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:gravity="left|center_vertical"
            android:text="Your first interactive UI"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/codelab_activities_intents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:gravity="left|center_vertical"
            android:text="Activities and intents"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded" />


    </LinearLayout>

</ScrollView>